<div class="panel panel-default">
    <div class="panel-heading">
        Devenez hôte Airbnb
    </div>
    
    <div class="panel-body">
        <div class="container">
            
            <%= form_for @room do |f| %>
            <%= render 'shared/errors' %>
            
            <div class="row">
                <div class="col-md-4 select">
                    <div class="form-group">
                    <label>Type d'habitation</label>
                        <%= f.select :home_type, [["Maison","Maison"],["Appartement","Appartement"],["Bed & Breakfast","Bed & Breakfast"]],
                        id: "home_type", prompt:"A sélectionner...", class:"form-control" %>
                    </div>
                </div>
                <div class="col-md-4 select">
                    <div class="form-group">
                    <label>Type de logement</label>
                        <%= f.select :room_type, [["Logement Entier","Logement Entier"],["Chambre Privée","Chambre Privée"],
                        ["Chambre Partagée","Chambre Partagée"]], prompt:"A sélectionner...", class:"form-control" %>
                    </div>
                </div>
                <div class="col-md-4 select">
                    <div class="form-group">
                    <labe>Nombre de voyageur</labe>
                        <%= f.select :accomodate, [["1 Voyageur",1],["2 Voyageurs",2],["3 Voyageurs",3],["4 Voyageurs",4],
                        ["5 Voyageurs",5],["6 Voyageurs",6]], prompt:"A sélectionner...", class:"form-control" %>
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-md-4 select">
                    <div class="form-group">
                    <label>Chambres</label>
                        <%= f.select :bed_room, [["1",1],["2",2],
                        ["3",3],["4",4]], prompt:"A sélectionner...", class:"form-control" %>
                    </div>
                </div>
                <div class="col-md-4 select">
                    <div class="form-group">
                    <labe>Salles de bain</labe>
                        <%= f.select :bath_room, [["1",1],["2",2],["3",3],["4",4]], prompt:"A sélectionner...", class:"form-control" %>
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="form-group">
                    <label>Donnez un nom au logement</label>
                    <%= f.text_field :listing_name, placeholder:"Titre de l'annonce", class:"form-control" %>
                </div>
                <div class="form-group">
                    <label>Résumé</label>
                    <%= f.text_area :summary, placeholder:"Décrivez votre logement", class:"form-control" %>
                </div>
                <div class="form-group">
                    <label>Adresse</label>
                    <%= f.text_field :address, placeholder:"Où est situé votre logement ?", class:"form-control" %>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <%= f.check_box :is_wifi %> Wifi
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_tv %> Télévision
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_closet %> Penderie
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_shampoo %> Shampooing
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                        <%= f.check_box :is_breakfast %> Petit déjeuner
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_heating %> Chauffage
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_air %> Climatisation
                    </div>
                    <div class="form-group">
                        <%= f.check_box :is_kitchen %> Cuisine
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Prix par nuit</label>
                        <div class="input-group">
                            <%= f.text_field :price, placeholder:"ex: 45€", class:"form-control" %>
                            <div class="input-group-addon">€</div>
                        </div>
                    </div>
                </div>
            </div>
            
            
            <div class="row">
                <div class="form-group">
                    <%= f.check_box :active %> Annonce active
                </div>
            </div>
            
            
            <div class="actions">
                <%= f.submit "Je valide mon annonce", class:"btn btn-primary" %>
            </div>
            
            <% end %>
            
        </div>
    </div>
</div>
